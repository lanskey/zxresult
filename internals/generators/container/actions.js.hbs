import * as CONSTANT from './constants';

function action(type, payload = {}) {
  return { type, ...payload };
}

export const defaultAction = {
  request: value => action(CONSTANT.DEFAULT_ACTION.REQUEST, {}),
  success: (value, response) => action(CONSTANT.DEFAULT_ACTION.SUCCESS, {}),
  failure: (value, error) => action(CONSTANT.DEFAULT_ACTION.FAILURE, {}),
};
